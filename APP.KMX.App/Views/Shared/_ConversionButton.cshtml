@model ConversionButtonModel

<div class="col-md-4 col-sm-6 mb-4">
    <div class="card-style ">
        <img src="img/button-icons/@Model.IconClass" class="fa-2x mb-3" alt="Alternate Text" />
        @* <img class="@Model.IconClass  fa-2x mb-3"> *@
        <p><strong>@Model.Title</strong></p>
        <form asp-action="FileConversion" asp-controller="Home" method="post">
            <input type="hidden" name="Title" value="@Model.Title" />
            <input type="hidden" name="IconClass" value="@Model.IconClass" />
            <input type="hidden" name="Link" value="@Model.Link" />
            <input type="hidden" name="ConvertFrom" value="@Model.ConvertFrom" />
            <input type="hidden" name="ConvertTo" value="@Model.ConvertTo" />
            <button type="submit" class="btn btn-outline-primary borderbtn">
                <img src="img/button-icons/arrow-link.svg" />
            </button>
        </form>
        @* <a href="@Model.Link" class="btn btn-outline-primary figure-img"><img src="img/button-icons/arrow-link.svg"/></a> *@
    </div>
</div>


<style>
    /* ==============================================
       CSS CUSTOM PROPERTIES (VARIABLES)
       ============================================== */
    :root {
        --background-white: #FFFFFF;
        --shadow-color: rgba(112, 144, 176, 0.15);
        --shadow-color-hover: rgba(112, 144, 176, 0.25);
        --border-radius-card: 25px;
        --spacing-small: 10px;
        --spacing-medium: 13px;
        --spacing-large: 23px;
        --spacing-xl: 19px;
        --transition-smooth: all 0.3s ease;
    }

    /* ==============================================
       BUTTON STYLES
       ============================================== */
    .borderbtn {
        border-color: transparent;
        background: transparent;
        padding: 8px;
        border-radius: 50%;
        transition: var(--transition-smooth);
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .borderbtn:hover {
        background-color: #f8f9fa;
        transform: scale(1.1);
    }

    .borderbtn:focus {
        box-shadow: 0 0 0 2px rgba(0, 123, 255, 0.25);
        outline: none;
    }

    .figure-img {
        border-color: transparent;
    }

    /* ==============================================
       CARD COMPONENTS
       ============================================== */
    .card-style {
        /* Layout */
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: space-between;
        
        /* Spacing */
        padding: var(--spacing-small);
        gap: var(--spacing-medium);
        
        /* Dimensions */
        width: 100%;
        height: auto;
        
        /* Appearance */
        background: var(--background-white);
        box-shadow: 3px 7px 30px var(--shadow-color);
        border-radius: var(--border-radius-card);
        
        /* Flexbox properties */
        flex: none;
        order: 0;
        flex-grow: 0;
        
        /* Animation */
        transition: var(--transition-smooth);
        cursor: pointer;
    }

    .card-style:hover {
        box-shadow: 3px 7px 30px var(--shadow-color-hover);
        transform: translateY(-3px);
    }

    /* ==============================================
       TEXT COMPONENTS
       ============================================== */
    .text-style {
        display: flex;
        flex-direction: row;
        align-items: flex-start;
        padding: 0;
        gap: var(--spacing-small);
        width: auto;
        height: auto;
        flex: none;
        order: 1;
        flex-grow: 1;
    }

    .card-style p {
        margin: 0;
        font-weight: 600;
        color: #333333;
        flex-grow: 1;
    }

    /* ==============================================
       IMAGE STYLES
       ============================================== */
    .card-style img {
        transition: var(--transition-smooth);
    }

    .card-style:hover img {
        transform: scale(1.05);
    }

    /* ==============================================
       RESPONSIVE DESIGN
       ============================================== */
    @@media (max-width: 768px) {
        .card-style {
            flex-direction: column;
            text-align: center;
            padding: var(--spacing-medium);
        }

        .card-style p {
            margin-top: var(--spacing-small);
        }
    }

    @@media (max-width: 480px) {
        .card-style {
            padding: var(--spacing-small);
            gap: var(--spacing-small);
        }
    }
</style>