@model LoginModel
@{
    ViewData["Title"] = "Login";
}

@section Styles {
    <link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />
}

<div class="auth-main-card">
    <h1>Faça login na sua conta</h1>
    <p>Por favor insira suas informações nos campos abaixo para a plataforma</p>
    
    <div class="login-card">
        <form asp-action="Login" method="post">
            @Html.AntiForgeryToken()
            <input asp-for="@ViewData["ReturnUrl"]" type="hidden" />
            
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-container">
                <div class="text-area">
                    <p>Email</p>
                    <input asp-for="Email" class="text-input" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                
                <div class="password-container">
                    <p>Senha</p>
                    <div class="password-wrapper">
                        <input asp-for="Password" class="text-input password" type="password" id="passwordField" />
                        <button type="button" id="togglePassword" class="toggle-password">
                            <img src="~/img/show-password-icon.svg" alt="Show Password" id="toggleIcon" />
                        </button>
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-check form-check-spaced">
                    <input asp-for="RememberMe" class="form-check-input" type="checkbox" />
                    <label asp-for="RememberMe" class="form-check-label">
                        Lembrar meus dados de acesso
                    </label>
                </div>

                <div>
                    <button type="submit" class="login-button">Entrar</button>
                </div>
            </div>
            
            <div class="esquecer-criar justify-content-between">
                <div>Esqueceu sua Senha?</div>
                <div><a asp-action="RegisterPage">Criar uma conta</a></div>
            </div>
        </form>

        <div class="social-buttons-container">
            <button class="login-google"><img src="/img/button-icons/google-icon.svg"/> Continue com Google</button>
        </div>
        <div class="social-buttons-container">
            <button class="login-facebook"><img src="/img/button-icons/facebook-icon.svg" /> Continue com Facebook</button>
        </div>
    </div>
</div>
<script>
    document.getElementById("togglePassword").addEventListener("click", function () {
        var passwordField = document.getElementById("passwordField");
        var toggleIcon = document.getElementById("toggleIcon");

        if (passwordField.type === "password") {
            passwordField.type = "text";
            toggleIcon.src = "/img/hide-password-icon.svg";
        } else {
            passwordField.type = "password";
            toggleIcon.src = "/img/show-password-icon.svg";
        }
    });
</script>