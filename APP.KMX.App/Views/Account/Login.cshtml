@model UserModel
@{
    ViewData["Title"] = "Login";
}


<div class="main-card">
    <h1>Faça login na sua conta</h1>
    <p>Por favor insira suas informações nos campos abaixo para a plataforma </p>
    <div class="login-card">
        <div class="form-container">
            <div class="text-area">
                <p> Email</p>
                @Html.TextBoxFor(a => a.Email, new { @class = "text-input" })
            </div>
            <div class="password-container">
                <p>Senha</p>
                <div class="password-wrapper">
                    @Html.TextBoxFor(a => a.Password, new { @class = "text-input password", type = "password", id = "passwordField" })
                    <button type="button" id="togglePassword" class="toggle-password">
                        <img src="~/img/show-password-icon.svg" alt="Show Password" id="toggleIcon" />
                    </button>
                </div>
            </div>
            @* <div >
                <p> Senha</p>
                @Html.TextBoxFor(a => a.Password, new { @class = "text-input password", type = "password" })
            </div> *@

            <div class="form-check" style="padding-top: 10px; padding-bottom: 10px;">
                <input class="form-check-input" type="checkbox" value="" id="flexCheckIndeterminate">
                <label class="form-check-label" for="flexCheckIndeterminate">
                    Lembrar meus dados de acesso
                </label>
            </div>


            <div>
                <button class="login-button">Entrar</button>
            </div>

        </div>
        <div class="esquecer-criar justify-content-between">
            <div class="esquecer-criar">
                <div>Esqueceu sua Senha?</div>
            </div>
            
            <div class="esquecer-criar">
                <div>Criar uma conta</div>
            </div>
        </div>

        <div>
            <button class="login-google" > <img src="/img/button-icons/google-icon.svg"/> Continue com Google</button>
        </div>
        <div>
            <button class="login-facebook"> <img src="/img/button-icons/facebook-icon.svg" /> Continue com Facebook</button>
        </div>
    </div>
</div>



<style>
    /* ==============================================
       CSS CUSTOM PROPERTIES (VARIABLES)
       ============================================== */
    :root {
        --primary-color: #590D82;
        --primary-color-light: #EEE7F3;
        --background-white: #FFFFFF;
        --border-color: #E7E7E7;
        --border-color-light: #EFF0F7;
        --text-color-dark: #333333;
        --text-color-muted: #666666;
        --shadow-color: rgba(112, 144, 176, 0.15);
        --social-shadow: rgba(19, 18, 66, 0.07);
        --border-radius-card: 24px;
        --border-radius-button: 30px;
        --border-radius-input: 30px;
        --border-radius-social: 46px;
        --spacing-small: 10px;
        --spacing-medium: 16px;
        --spacing-large: 20px;
        --spacing-xl: 27px;
        --spacing-xxl: 32px;
        --spacing-xxxl: 49px;
        --spacing-huge: 56px;
        --button-width: 448px;
        --button-height: 56px;
        --card-width: 546px;
        --input-width: 448px;
        --input-height: 56px;
        --transition-smooth: all 0.3s ease;
    }

    /* ==============================================
       LAYOUT CONTAINERS
       ============================================== */
    .main-card {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        margin: 0;
        padding: var(--spacing-large);
        text-align: center;
    }

    .main-card h1 {
        color: var(--primary-color);
        margin-bottom: var(--spacing-medium);
        font-weight: 700;
    }

    .main-card p {
        color: var(--text-color-muted);
        margin-bottom: var(--spacing-xl);
        line-height: 1.6;
    }

    /* ==============================================
       CARD COMPONENTS
       ============================================== */
    .login-card {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: var(--spacing-huge) var(--spacing-xxxl);
        gap: var(--spacing-xl);
        width: 100%;
        max-width: var(--card-width);
        height: auto;
        background: var(--background-white);
        box-shadow: 3px 7px 30px var(--shadow-color);
        border-radius: var(--border-radius-card);
        flex: none;
        order: 1;
        flex-grow: 0;
        transition: var(--transition-smooth);
    }

    .form-container {
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: stretch;
        gap: var(--spacing-medium);
    }

    .login-card:hover {
        box-shadow: 3px 7px 40px rgba(112, 144, 176, 0.25);
        transform: translateY(-5px);
    }

    /* ==============================================
       FORM COMPONENTS
       ============================================== */
    .text-area {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        padding: 0;
        width: 100%;
        height: auto;
        flex: none;
        order: 0;
        flex-grow: 0;
        margin-bottom: var(--spacing-small);
    }

    .text-area p {
        color: var(--text-color-dark);
        font-weight: 600;
        margin-bottom: 8px;
        text-align: left;
    }

    .text-input {
        box-sizing: border-box;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: flex-start;
        padding: var(--spacing-medium) var(--spacing-large);
        gap: var(--spacing-small);
        width: 100%;
        height: var(--input-height);
        background: var(--background-white);
        border: 1px solid var(--border-color);
        border-radius: var(--border-radius-input);
        flex: none;
        order: 1;
        align-self: stretch;
        flex-grow: 0;
        font-size: 16px;
        transition: var(--transition-smooth);
    }

    .text-input:focus {
        outline: none;
        border-color: var(--primary-color);
        box-shadow: 0 0 0 3px rgba(89, 13, 130, 0.1);
    }

    .text-input:hover {
        border-color: var(--primary-color);
    }

    /* ==============================================
       PASSWORD FIELD
       ============================================== */
    .password-container {
        width: 100%;
        margin-bottom: var(--spacing-medium);
    }

    .password-container p {
        color: var(--text-color-dark);
        font-weight: 600;
        margin-bottom: 8px;
        text-align: left;
    }

    .password-wrapper {
        position: relative;
        display: flex;
        align-items: center;
        width: 100%;
    }

    .password-wrapper input {
        width: 100%;
        padding-right: 50px; /* Space for the toggle button */
    }

    .toggle-password {
        position: absolute;
        right: 15px;
        background: none;
        border: none;
        cursor: pointer;
        padding: 8px;
        border-radius: 50%;
        transition: var(--transition-smooth);
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .toggle-password:hover {
        background-color: rgba(89, 13, 130, 0.1);
    }

    .toggle-password img {
        width: 20px;
        height: 20px;
        transition: var(--transition-smooth);
    }

    .toggle-password:hover img {
        transform: scale(1.1);
    }

    /* ==============================================
       BUTTON STYLES
       ============================================== */
    .login-button {
        color: white;
        font-size: 20px;
        font-weight: 600;
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
        padding: var(--spacing-large) var(--spacing-xxl);
        gap: var(--spacing-small);
        width: 100%;
        height: var(--button-height);
        background: var(--primary-color);
        border: none;
        border-radius: var(--border-radius-button);
        flex: none;
        order: 3;
        align-self: stretch;
        flex-grow: 0;
        cursor: pointer;
        transition: var(--transition-smooth);
    }

    .login-button:hover {
        background: #6D0F9A;
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(89, 13, 130, 0.4);
    }

    .login-button:active {
        transform: translateY(0);
    }

    /* Social Login Buttons */
    .login-google,
    .login-facebook {
        font-size: 18px;
        font-weight: 500;
        width: 100%;
        height: var(--button-height);
        background: var(--background-white);
        border: 1px solid var(--border-color-light);
        box-shadow: 0px 2px 6px var(--social-shadow);
        border-radius: var(--border-radius-social);
        display: flex;
        align-items: center;
        justify-content: center;
        gap: var(--spacing-small);
        cursor: pointer;
        transition: var(--transition-smooth);
        margin-bottom: var(--spacing-medium);
    }

    .login-google:hover,
    .login-facebook:hover {
        border-color: var(--primary-color);
        box-shadow: 0px 4px 12px rgba(19, 18, 66, 0.15);
        transform: translateY(-2px);
    }

    .login-google img,
    .login-facebook img {
        width: 24px;
        height: 24px;
        transition: var(--transition-smooth);
    }

    .login-google:hover img,
    .login-facebook:hover img {
        transform: scale(1.1);
    }

    /* ==============================================
       FORM UTILITIES
       ============================================== */
    .form-check {
        padding-top: var(--spacing-small);
        padding-bottom: var(--spacing-small);
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .form-check-input {
        margin: 0;
        accent-color: var(--primary-color);
    }

    .form-check-label {
        color: var(--text-color-dark);
        font-size: 14px;
        line-height: 1.5;
        cursor: pointer;
    }

    .esquecer-criar {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        width: 100%;
        margin-top: var(--spacing-medium);
    }

    .esquecer-criar div {
        color: var(--primary-color);
        font-size: 14px;
        cursor: pointer;
        transition: var(--transition-smooth);
        justify-content: center;
        text-decoration: underline;
    }

    .esquecer-criar div:hover {
        color: #6D0F9A;
        transform: translateY(-1px);
    }

    /* ==============================================
       RESPONSIVE DESIGN
       ============================================== */
    @@media (max-width: 768px) {
        .main-card {
            padding: var(--spacing-medium);
        }

        .login-card {
            width: 100%;
            max-width: 400px;
            padding: var(--spacing-xl) var(--spacing-large);
        }

        .text-area,
        .text-input,
        .login-button,
        .login-google,
        .login-facebook {
            width: 100%;
        }

        .password-container {
            width: 100%;
        }
    }

    @@media (max-width: 480px) {
        .main-card h1 {
            font-size: 24px;
        }

        .login-card {
            padding: var(--spacing-large);
            max-width: 320px;
        }

        .login-button,
        .login-google,
        .login-facebook {
            font-size: 16px;
            height: 48px;
            padding: 14px 24px;
        }

        .esquecer-criar div {
            font-size: 12px;
        }
    }
</style>

<script>
    document.getElementById("togglePassword").addEventListener("click", function () {
        var passwordField = document.getElementById("passwordField");
        var toggleIcon = document.getElementById("toggleIcon");

        if (passwordField.type === "password") {
            passwordField.type = "text";
            toggleIcon.src = "/img/show-password-icon.svg"; // Change to 'hide' icon
        } else {
            passwordField.type = "password";
            toggleIcon.src = "/img/show-password-icon.svg"; // Change back to 'show' icon
        }
    });
</script>